    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver"
            ],
            "django": true
        },
        {
            "command": "pnpm run tw",
            "name": "Tailwind",
            "request": "launch",
            "type": "node-terminal"
        }
    ],
    "compounds": [
        {
            "name": "Django + Tailwind",
            "configurations": [
                "Python Debugger: Django",
                "Tailwind"
            ]
        }
    ]
}